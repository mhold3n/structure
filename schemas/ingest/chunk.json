{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Chunk",
    "type": "object",
    "required": [
        "id",
        "doc_id",
        "text",
        "span"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "doc_id": {
            "type": "string"
        },
        "text": {
            "type": "string"
        },
        "span": {
            "type": "object",
            "required": [
                "start",
                "end"
            ],
            "properties": {
                "start": {
                    "type": "integer"
                },
                "end": {
                    "type": "integer"
                }
            }
        },
        "section": {
            "type": "string"
        },
        "page": {
            "type": "integer"
        }
    }
}